<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart.Cart_Fragments.CartFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_dark_blue"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:gravity="center_horizontal"
            android:paddingTop="15sp"
            android:textSize="28sp"
            android:textColor="@color/plain_yellow"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:text="Cart" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deep_dark_blue"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_gravity="center"
                android:src="@drawable/fallback_img" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You must Login to Checkout"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/promptedLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Login"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>