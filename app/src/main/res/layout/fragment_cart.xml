<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/deep_dark_blue"
    tools:context=".Cart.Cart_Fragments.CartFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_dark_blue"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="68sp"
            android:gravity="center_horizontal"
            android:paddingTop="15sp"
            android:textColor="@color/plain_yellow"
            android:letterSpacing="0.1"
            android:shadowColor="@color/black"
            android:shadowRadius="9"
            android:textSize="28sp"
            android:textStyle="bold"
            android:background="@drawable/background_gradient_shape"
            android:text="CART" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/deep_dark_blue"/>

        <TextView
            android:id="@+id/itemsDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:background="@color/deep_dark_blue"
            android:layout_marginEnd="15sp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textColor="#EC5628"
            android:paddingVertical="3sp"
            android:paddingHorizontal="6sp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@color/deep_dark_blue"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/itemsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/deep_dark_blue"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/checkoutBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <Button
                    android:id="@+id/checkoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_orange_red_gradient_round_shape"
                    android:text="Checkout"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/message_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Items to show"
                android:textSize="16dp"
                android:textColor="@color/plain_yellow"
                android:visibility="gone"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/plain_yellow"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"

        android:orientation="vertical">
        <ImageButton
            android:id="@+id/loginBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@drawable/login_arrow"
            android:tooltipText="Login"
            android:visibility="gone"
            app:tint="@color/white" />
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="11dp"-->
<!--            android:textColor="@color/white"-->
<!--            android:text="Login"/>-->
    </LinearLayout>

</LinearLayout>